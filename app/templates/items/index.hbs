<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Symbol</th>
        <th class="text-right">Quantity</th>
        <th class="text-center">Bought On</th>
        <th class="text-right">Bought Price</th>
        <th class="text-right">Bought Value</th>
        <th class="text-right">Sold Price /<br>Current Price</th>
        <th class="text-right">Sold Value /<br>Current Value</th>
        <th class="text-right">Profit / Loss</th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each asset in unsoldAssets}}
        <tr class="form-group {{if asset.isLoss 'text-danger'}} {{if asset.isProfit 'text-success'}}">
          <td>
            {{asset.symbol}}
          </td>
          <td class="text-right">
            {{asset.quantity}}
          </td>
          <td class="text-center">
            {{asset.boughtOn}}
          </td>
          <td class="text-right">
            {{asset.boughtPrice}}
          </td>
          <td class="text-right">
            {{asset.boughtValue}}
          </td>
          <td class="text-right">
            {{asset.soldPrice}}
          </td>
          <td class="text-right">
            {{asset.soldValue}}
          </td>
          <td class="text-right">
            {{asset.profit}}
          </td>
          <td class="text-right">
            {{link-to "Sell" "item.sell" asset.model class="btn btn-link btn-xs"}}
            {{link-to "Edit" "item.edit" asset.model class="btn btn-link btn-xs"}}
          </td>
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th class="text-right">
          {{soldValue}}
        </th>
        <th class="text-right">
          {{profit}}
        </th>
        <th class="text-right">
          {{link-to "Sell" "items.sell" class="btn btn-link btn-xs"}}
          {{link-to "Buy" "items.buy" class="btn btn-link btn-xs"}}
        </th>
      </tr>
    </tfoot>
    <thead>
      {{#unless isShowingSold}}
        <tr>
          <td colspan="9" class="text-muted text-center">
            <button class="btn btn-link btn-xs" {{action "showSold"}}>Show Sold Assets</button>
          </td>
        </tr>
      {{/unless}}
      {{#if isShowingSold}}
        <tr>
          <td colspan="9" class="text-muted text-center">
            <button class="btn btn-link btn-xs" {{action "hideSold"}}>Hide Sold Assets</button>
          </td>
        </tr>
      {{/if}}
    </thead>
    {{#if isShowingSold}}
      <tbody>
        {{#each asset in soldAssets}}
          <tr class="form-group {{if asset.isLoss 'text-danger'}} {{if asset.isProfit 'text-success'}}">
            <td>
              {{asset.symbol}}
            </td>
            <td class="text-right">
              {{asset.quantity}}
            </td>
            <td class="text-center">
              {{asset.boughtOn}}
            </td>
            <td class="text-right">
              {{asset.boughtPrice}}
            </td>
            <td class="text-right">
              {{asset.boughtValue}}
            </td>
            <td class="text-right">
              {{asset.soldPrice}}
            </td>
            <td class="text-right">
              {{asset.soldValue}}
            </td>
            <td class="text-right">
              {{asset.profit}}
            </td>
            <td class="text-right">
              {{link-to "Edit" "item.edit" asset.model class="btn btn-link btn-xs"}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    {{/if}}
  </table>
</div>
